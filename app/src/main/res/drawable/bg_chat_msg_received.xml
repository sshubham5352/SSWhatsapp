<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layers-->

    <item android:left="@dimen/size_chat_tail_width">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#01000000" />
            <corners
                android:radius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

    <!--===============-->

    <item android:left="@dimen/size_chat_tail_width">
        <shape android:shape="rectangle">
            <padding android:bottom="1px" />
            <solid android:color="#09000000" />
            <corners
                android:radius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

    <!--===============-->

    <item android:left="@dimen/size_chat_tail_width">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#10000000" />
            <corners
                android:radius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

    <!--ForeGround-->
    <item android:left="@dimen/size_chat_tail_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite" />
            <corners
                android:radius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

</layer-list>