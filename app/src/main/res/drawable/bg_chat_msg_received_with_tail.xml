<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="@dimen/padding_chat_item_start"
    android:paddingTop="@dimen/padding_chat_item_top"
    android:paddingEnd="@dimen/padding_chat_item_end"
    android:paddingBottom="@dimen/padding_chat_item_bottom">
    <!--Shadow Layers-->
    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners
                    android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                    android:bottomRightRadius="@dimen/corner_radius_chat_item"
                    android:topRightRadius="@dimen/corner_radius_chat_item" />
                <padding
                    android:bottom="1px"
                    android:left="1px"
                    android:right="1px" />
                <solid android:color="#01000000" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/size_chat_item_tail">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#01000000" />
            <corners
                android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                android:bottomRightRadius="@dimen/corner_radius_chat_item"
                android:topRightRadius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

    <!--===============-->
    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners
                    android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                    android:bottomRightRadius="@dimen/corner_radius_chat_item"
                    android:topRightRadius="@dimen/corner_radius_chat_item" />
                <padding android:bottom="1px" />
                <solid android:color="#09000000" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/size_chat_item_tail">
        <shape android:shape="rectangle">
            <padding android:bottom="1px" />
            <solid android:color="#09000000" />
            <corners
                android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                android:bottomRightRadius="@dimen/corner_radius_chat_item"
                android:topRightRadius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

    <!--===============-->

    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners
                    android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                    android:bottomRightRadius="@dimen/corner_radius_chat_item"
                    android:topRightRadius="@dimen/corner_radius_chat_item" />
                <padding
                    android:bottom="1px"
                    android:left="1px"
                    android:right="1px" />
                <solid android:color="#10000000" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/size_chat_item_tail">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#10000000" />
            <corners
                android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                android:bottomRightRadius="@dimen/corner_radius_chat_item"
                android:topRightRadius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

    <!--ForeGround-->

    <item>
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners
                    android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                    android:bottomRightRadius="@dimen/corner_radius_chat_item"
                    android:topRightRadius="@dimen/corner_radius_chat_item" />
                <solid android:color="@color/colorWhite" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/size_chat_item_tail">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite" />
            <corners
                android:bottomLeftRadius="@dimen/corner_radius_chat_item"
                android:bottomRightRadius="@dimen/corner_radius_chat_item"
                android:topRightRadius="@dimen/corner_radius_chat_item" />
        </shape>
    </item>

</layer-list>