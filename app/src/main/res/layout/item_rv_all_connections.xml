<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.sswhatsapp.adapters.AllConnectionsAdapter">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_user_profile"
            android:layout_width="@dimen/size_profile_image"
            android:layout_height="@dimen/size_profile_image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_user_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_user_img"
            android:ellipsize="end"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:maxLines="1"
            android:text="@string/name"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_user_name"
            app:layout_constraintBottom_toTopOf="@id/last_msg"
            app:layout_constraintEnd_toStartOf="@id/last_msg_time_stamp"
            app:layout_constraintStart_toEndOf="@id/img_user_profile"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/last_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/size_time_stamp_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/user_name"
            app:layout_constraintTop_toBottomOf="@id/user_name" />


        <TextView
            android:id="@+id/last_msg_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/size_time_stamp_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/last_msg_read_status"
            android:layout_width="@dimen/size_chat_tick_icon_large"
            android:layout_height="@dimen/size_chat_tick_icon_large"
            android:background="@drawable/img_double_tick_green"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/number_of_unread_messages"
            android:layout_width="@dimen/size_chat_tick_icon_large"
            android:layout_height="@dimen/size_chat_tick_icon_large"
            android:background="@drawable/shape_circle_blue_gradient"
            android:fontFamily="@font/source_sans_pro_bold"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>