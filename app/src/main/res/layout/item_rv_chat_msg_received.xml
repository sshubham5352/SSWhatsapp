<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_between_chats_small"
        tools:context="com.example.sswhatsapp.adapters.ChatWithIndividualAdapter">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/msg_root_layout"
            style="@style/StyleChatConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_msg_received"
            app:layout_constraintEnd_toStartOf="@id/guideline_max_chat_width"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:text="Hi"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_msg_chat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/icon_highlight"
                android:layout_width="@dimen/size_chat_like_icon"
                android:layout_height="@dimen/size_chat_like_icon"
                android:layout_marginEnd="4dp"
                android:src="@drawable/img_star_highlight_icon"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chat_time_stamp"
                app:layout_constraintTop_toTopOf="@id/chat_time_stamp" />

            <TextView
                android:id="@+id/chat_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_chat_status_icon_top"
                android:fontFamily="@font/source_sans_pro_light"
                android:text="10:30am"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/size_time_stamp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/message"
                app:layout_constraintVertical_bias="1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_max_chat_width"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@integer/percent_chat_guideline_right" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>